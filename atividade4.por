programa
{
	
	funcao inicio()
	{
		real lado, area 

		faca{
			escreva("Informe o valor do lado: ")
			leia(lado)
		}enquanto(lado<=0)
		area = lado * lado
		escreva("A area é de ", area, "cm²")
	}
}
